<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>



<GridPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trimula.dircomp.MainController">

    <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
       <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>

    <VBox prefHeight="200.0" prefWidth="100.0">
        <SplitPane dividerPositions="0.8040446304044628, 0.9051603905160389" orientation="VERTICAL" VBox.vgrow="ALWAYS">
            <VBox>
                <ToolBar>
                    <CheckBox fx:id="checkBoxShowSame" selected="true" text="Show Same" />
                    <Button fx:id="buttonCompare" onAction="#onCompareClicked" text="Compare" />
                </ToolBar>
                <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
                    <VBox fx:id="paneDirectory1">
                        <HBox>
                            <ComboBox fx:id="comboBoxDirectory1" maxWidth="Infinity" promptText="Select Directory 1" HBox.hgrow="ALWAYS" />
                            <Button onAction="#selectDirectory1" text="Select" HBox.hgrow="NEVER" />
                        </HBox>
                        <ToolBar>
                           <ToggleButton fx:id="tbDir1ViewType" onAction="#dir1ViewTypeClick" text="/" />
                           <Pane prefWidth="5.0" />
                           <ToggleButton fx:id="tb1All"         onAction="#filterDir1" selected="true" text="All" />

                            <ToggleButton fx:id="tb1FullMatch"  onAction="#filterDir1"
                                          prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/setAxB.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </ToggleButton>

                            <ToggleButton fx:id="tb1Similar"    onAction="#filterDir1"
                                          prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/setSimilarA.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </ToggleButton>

                            <ToggleButton fx:id="tb1Suspected"  onAction="#filterDir1" text="∅"
                                          prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                            </ToggleButton>
                            <ToggleButton fx:id="tb1Unique"     onAction="#filterDir1"
                                          prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/setA-B.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </ToggleButton>
                            <Pane prefWidth="5.0" />

                            <ToggleButton fx:id="tb1DirAndFile" onAction="#filterDir1"
                                          prefWidth="32.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="32.0"   pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/DirAndFile.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </ToggleButton>

                            <ToggleButton fx:id="tb1DirOnly"    onAction="#filterDir1"
                                          prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/folderW10.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </ToggleButton>

                            <ToggleButton fx:id="tb1FileOnly"   onAction="#filterDir1"
                                          prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/fileW10.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </ToggleButton>
                        </ToolBar>
                    <StackPane>

                    <VBox fx:id="vbTableView1">


                            <TableView fx:id="tableViewDir1" maxHeight="Infinity">
                             <columns>
                                 <TableColumn prefWidth="75.0" text="C1" />
                                 <TableColumn prefWidth="75.0" text="C2" />
                             </columns>
                         </TableView>

                    </VBox>
                    <VBox fx:id="vbTreeView1">
                      <ToolBar>
                          <Button onAction="#tv1CollapseAll" text="⋘" />
                          <Button onAction="#tv1ExpandAll" text="⋙" />
                          <Button onAction="#tv1CollapseLast" text="《" />
                          <Button onAction="#tv1ExpandLast" text="》" />
                          <Button onAction="#tv1CollapseSelected" text="〈" />
                          <Button onAction="#tv1ExpandSelected" text="〉" />
                      </ToolBar>
                      <TreeView fx:id="treeViewDir1" maxHeight="Infinity" VBox.vgrow="ALWAYS" />
                    </VBox>

                    </StackPane>

                    </VBox>
                        <VBox fx:id="paneDirectory2">
                            <HBox>
                                <ComboBox fx:id="comboBoxDirectory2" maxWidth="Infinity" promptText="Select Directory 2" HBox.hgrow="ALWAYS" />
                                <Button onAction="#selectDirectory2" text="Select" HBox.hgrow="NEVER" />
                            </HBox>

                            <ToolBar>
                                <ToggleButton fx:id="tbDir2ViewType" onAction="#dir2ViewTypeClick" text="\\" />
                                <Pane prefWidth="5.0" />

                                <ToggleButton fx:id="tb2MatchTo1" layoutX="128.0" layoutY="10.0" text="⯮" />

                                <ToggleButton fx:id="tb2All"  onAction="#filterDir2"
                                              prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../icons/setB.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </ToggleButton>

                                <ToggleButton fx:id="tb2FullMatch" onAction="#filterDir2"
                                    prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../icons/setBxA.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </ToggleButton>

                                <ToggleButton fx:id="tb2Similar" onAction="#filterDir2"
                                              prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../icons/setSimilarB.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </ToggleButton>

                                <ToggleButton fx:id="tb2Suspected" text="∅" />

                                <ToggleButton fx:id="tb2Unique" onAction="#filterDir2"
                                              prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../icons/setB-A.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </ToggleButton>

                                <Pane prefWidth="5.0" />

                                <ToggleButton fx:id="tb2DirAndFile" onAction="#filterDir2"
                                              prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../icons/DirAndFile.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </ToggleButton>
                                <ToggleButton fx:id="tb2DirOnly" onAction="#filterDir2"
                                              prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../icons/folderW10.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </ToggleButton>
                                <ToggleButton fx:id="tb2FileOnly" onAction="#filterDir2"
                                              prefWidth="24.0" prefHeight="24.0" minWidth="16.0" minHeight="16.0">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../icons/fileW10.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </ToggleButton>
                            </ToolBar>
                            <StackPane>
                                  <VBox fx:id="vbTreeView2">
                                      <ToolBar>
                                          <Button onAction="#tv2CollapseAll" text="⋘" />
                                          <Button onAction="#tv2ExpandAll" text="⋙" />
                                          <Button onAction="#tv2CollapseLast" text="《" />
                                          <Button onAction="#tv2ExpandLast" text="》" />
                                          <Button onAction="#tv2CollapseSelected" text="〈" />
                                          <Button onAction="#tv2ExpandSelected" text="〉" />
                                      </ToolBar>
                                      <TreeView fx:id="treeViewDir2" maxHeight="Infinity" VBox.vgrow="ALWAYS" />
                                  </VBox>
                                  <VBox fx:id="vbTableView2">
      
                                      <TableView fx:id="tableViewDir2" maxHeight="Infinity" VBox.vgrow="ALWAYS">
                                          <columns>
                                              <TableColumn prefWidth="75.0" text="C1" />
                                              <TableColumn prefWidth="75.0" text="C2" />
                                          </columns>
                                      </TableView>
                                  </VBox>

                            </StackPane>
                        </VBox>
                </SplitPane>
            </VBox>
            <TextArea fx:id="taSelectedItemProperties" />
            <TextArea fx:id="taStatus" />
        </SplitPane>
        <HBox fx:id="hBoxProgress" alignment="CENTER">
         <Label fx:id="lProgress" text="?" />
            <ProgressBar fx:id="progressBar" maxHeight="Infinity" maxWidth="Infinity" progress="1.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="buttonCancelProcessing" onAction="#onCancelProcessing" text="Cancel" HBox.hgrow="NEVER" />
        </HBox>
    </VBox>
</GridPane>
