                                    </ImageView>
                                </graphic>
                            </ToggleButton>

                            <ToggleButton fx:id="tb1Similar" minHeight="16.0" minWidth="16.0" onAction="#filterDir1" prefHeight="24.0" prefWidth="24.0">
